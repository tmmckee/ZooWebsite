<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-18" />
    <meta name="Home Page" content="width=device-width" />
    <title>Home Page</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <style>

        h1 {
            font-size: 3em;
            color: #edf5e1;
            font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
            text-align: center;
        }
        h2 {
            font-size: 2.5em;
            color: #edf5e1;
            font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
            text-align: center;
        }
        
        ul{
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;

        }

        li {
            float:left;
        }

        li a {
            font-size: 1.5em;
            display: block;
            color: #edf5e1;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li a:hover {
            background-color: #8ee4af;
        }
    </style>
</head>
<body style="background-color:#5cdb95">
<h1>Lynnwood Park Zoo</h1>
<h2>@ViewBag.Title</h2>
<nav>
    <ul>
        <li><a asp-action="Index">Home page</a></li>
        <li><a asp-action="Tickets">Tickets page</a></li>
        <li><a asp-action="Animals">Animals page</a></li>
        <li><a asp-action="DirectionsToZoo">Directions to zoo page</a></li>
        <li><a asp-action="AboutUs">About us page</a></li>
    </ul>
</nav>

<div class="container body-content">
    @RenderBody()
    <hr/>
</div>
@RenderSection("Scripts", required: false)
</body>
</html>
